{% extends 'base.html.twig' %}

{% block body %}
<div class="admin">
    <div class="row">
        <h1 class="my-3 mx-auto">Games list</h1>
    </div>
    <button class="btn btn-outline-secondary my-3 mx-1" href="{{ path('admin_game_new') }}">Create a new game</button>
    <table  class="table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Score 1</th>
                <th>Score 2</th>
                <th>Winner</th>
                <th>Posline</th>
                <th>Poscol</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><a href="{{ path('admin_game_show', { 'id': game.id }) }}">{{ game.id }}</a></td>
                <td>{{ game.score1 }}</td>
                <td>{{ game.score2 }}</td>
                <td>{{ game.winner }}</td>
                <td>{{ game.posLine }}</td>
                <td>{{ game.posCol }}</td>
                <td>
                    <div class="row">
                        <div class="col-4">
                            <a class="btn btn-outline-secondary my-1 p-1"
                               href="{{ path('admin_game_show', { 'id': game.id }) }}">show</a>
                        </div>
                        <div class="col-6">
                            <a class="btn btn-outline-secondary my-1 p-1"
                               href="{{ path('admin_game_edit', { 'id': game.id }) }}">edit</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
