{% extends 'base.html.twig' %}

{% block body %}
<div class="admin">
    <div class="row">
        <h1 class="my-3 mx-auto">Player</h1>
    </div>

    <table  class="table-striped table-hover table-sm">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ player.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ player.lastName }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ player.avatar }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-secondary mx-2 my-2" href="{{ path('admin_player_index') }}">Back to the list</a>
    <a class="btn btn-outline-secondary mx-2 my-2" href="{{ path('admin_player_edit', { 'id': player.id }) }}">Edit</a>
    {{ form_start(delete_form) }}
    <input type="submit" value="Delete" class="btn btn-outline-secondary mx-2 my-2">
    {{ form_end(delete_form) }}
</div>
{% endblock %}
